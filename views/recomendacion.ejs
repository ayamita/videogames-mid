<%- include layouts/header.ejs %>
    <div class="container">
        <br><h1 style="text-align: center;">Recomendar Juego</h1><br>
        <form method="POST">
            <div class="form-group">
                <label for="exampleFormControlInput1">Nombre del videojuego:</label>
                <input type="text" class="form-control" id="title" name="title" placeholder="Nombre del videojuego">
            </div>
            <div class="form-group">
                <label for="exampleFormControlInput1">Decripción:</label>
                <input type="text" class="form-control" id="description" name="description" placeholder="Decripción">
            </div>
            <div class="form-group">
                <input hidden="true" type="text" class="form-control" id="photo" name="photo" placeholder="Foto" value="https://i1.sndcdn.com/artworks-000380296524-chzw5l-t500x500.jpg">
            </div>
            <div class="form-group">
                <label for="exampleFormControlInput1">Lanzamiento:</label>
                <input type="text" id="release_year" name="release_year" width="276" />    
            </div>
            <div class="form-group row">
                <div class="col-sm-10"><br>
                  <input type="submit" value="Guardar" class="btn btn-dark">
                </div>
              </div>
        </form>
    </div>
    <script>
        $('#release_year').datepicker({
            uiLibrary: 'bootstrap4'
        });
    </script>



    </div>
