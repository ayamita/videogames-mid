<%- include layouts/header.ejs %>
  <div class="container">
    <br />
    <h1>
      <%= title %>
    </h1>
    <br />


    <div class="row">

      <% for(var Juego=0;Juego<Games.length;Juego++) { %>

        <div class="col-sm-4">
          <div class="card"
          
          >
            <img height="300px" src="<%=Games[Juego].photo%>" class="card-img-top" alt="...">
            <div class="card-body">
              <h5 class="card-title">
                <%=Games[Juego].title%>
              </h5>
              <p class="card-text">
                <%=Games[Juego].description%>
              </p>
              <h6>Fecha de lanzamiento: <%=Games[Juego].release_year%>
              </h6>
              <br/>

              <!-- <a href="#" class="btn btn-primary">Comprar</a> -->
            </div>
          </div>
        </div>

       

        <% } %>
    </div>


  </div>
  <%- include layouts/footer.ejs %>